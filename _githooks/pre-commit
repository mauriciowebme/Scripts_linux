#!/bin/bash

# Define o tamanho mÃ¡ximo permitido (em bytes)
MAX_SIZE=104857600 # 100 MB

# Flag para determinar se o commit deve ser bloqueado
BLOCK_COMMIT=false

# FunÃ§Ã£o para obter o tamanho do arquivo
get_file_size() {
    local file="$1"

    if command -v stat >/dev/null 2>&1; then
        # Usa 'stat' para sistemas baseados em Unix/Linux
        stat -c%s "$file"
    else
        # Usa 'wc' para Windows (via Git Bash)
        wc -c < "$file" | tr -d ' '
    fi
}

# Verifica cada arquivo que estÃ¡ sendo adicionado ao commit
for FILE in $(git diff --cached --name-only); do
    if [ -f "$FILE" ]; then
        FILE_SIZE=$(get_file_size "$FILE")
        
        # Se o arquivo exceder o limite, bloqueia o commit
        if [ $FILE_SIZE -gt $MAX_SIZE ]; then
            echo "âŒ O arquivo '$FILE' excede o tamanho mÃ¡ximo permitido de 100 MB."
            BLOCK_COMMIT=true
        fi
    fi
done

# Bloqueia o commit se algum arquivo estiver acima do limite
if $BLOCK_COMMIT; then
    echo "ðŸš« Commit bloqueado devido a arquivos grandes."
    exit 1
fi

exit 0
